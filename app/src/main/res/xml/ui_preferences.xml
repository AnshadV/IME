<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/ui_themes_header">

        <!--        <EditTextPreference-->
        <!--            app:key="signature"-->
        <!--            app:title="@string/signature_title"-->
        <!--            app:useSimpleSummaryProvider="true" />-->

        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="@integer/pref_foreground_color_default"
            android:key="@string/pref_ui_foreground_c"
            android:title="@string/theme_foreground_color_title"
            app:colorpicker_selectNoneButtonText="@string/theme_reset_color" />

        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="@integer/pref_background_color_default"
            android:key="@string/pref_ui_background_c"
            android:title="@string/theme_background_color_title"
            app:colorpicker_selectNoneButtonText="@string/theme_reset_color" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/ui_keyboard_header">
        <SeekBarPreference
            android:defaultValue="@integer/pref_keyboard_height_portrait_default"
            android:key="@string/pref_ui_keyboard_height_portrait_i"
            android:max="@integer/keyboard_height_max"
            android:title="@string/other_keyboard_height_portrait_title"
            app:min="@integer/keyboard_height_min"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="@integer/pref_keyboard_height_landscape_default"
            android:key="@string/pref_ui_keyboard_height_landscape_i"
            android:max="@integer/keyboard_height_max"
            android:title="@string/other_keyboard_height_landscape_title"
            app:min="@integer/keyboard_height_min"
            app:showSeekBarValue="true" />
    </PreferenceCategory>

</PreferenceScreen>